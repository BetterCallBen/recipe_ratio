<div class="container">
  <div class="mini-navbar">
    <%= link_to :back do %>
      <i class="fa-solid fa-arrow-left-long arrow"></i>
    <% end %>
      <h1 class="bold blue nav-title"><%= @recipe.name.capitalize %> (for <%= @ratio.number_of_people %>) </h1>
    <%= link_to edit_recipe_path(@recipe) do %>
      <i class="fa-solid fa-pen pen"></i>
    <% end %>
  </div>

  <%= image_tag("crepe.jpg", class: "crepe-img") %>

  <h3 class="title title-ingredient">Ingredients (<%= @recipe.recipe_ingredients.count %>)</h3>


  <div class="ingredients ratio-ingredients">
    <% @recipe.recipe_ingredients.each do |ingredient| %>
      <div class="ingredient ">
        <p class="bold"><%= ingredient.ingredient.name %></p>
        <div class="quantity">
          <p><%= ingredient.quantity * @ratio.number_of_people / @recipe.number_of_people%></p>
          <p><%= ingredient.unity %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="bot-nav">
  <%= link_to root_path do %>
    <i class="fa-solid fa-house-chimney home"></i>
  <% end %>

  <%= link_to recipes_path do %>
    <i class="fa-solid fa-utensils recipe active"></i>
  <% end %>

  <%= link_to root_path do %>
    <i class="fa-solid fa-user user"></i>
  <% end %>
</div>
